            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <select asp-for="Reason" class="form-control" asp-items="ViewBag.Reason"></select>
            </div>
            <div class="form-group">
                <label asp-for="DateClosure" class="control-label"></label>
                <input asp-for="DateClosure" class="form-control" />

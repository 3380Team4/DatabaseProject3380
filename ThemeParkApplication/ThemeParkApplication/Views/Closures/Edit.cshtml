@model ThemeParkApplication.Models.Closures

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Closures</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ClosureId" />

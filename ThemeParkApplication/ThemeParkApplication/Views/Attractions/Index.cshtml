@model IEnumerable<ThemeParkApplication.Models.Attractions>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AttractionName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HeightRequirement)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AgeRequirement)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.AttractionStatusNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttractionTypeNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeightRequirement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AgeRequirement)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionStatusNavigation.AttractionStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AttractionTypeNavigation.AttractionType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.EmployeeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AttractionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AttractionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AttractionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

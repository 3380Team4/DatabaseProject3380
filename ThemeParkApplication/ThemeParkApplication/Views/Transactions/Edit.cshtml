@model ThemeParkApplication.Models.Transactions

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Transactions</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TransactionId" />
            <input type="hidden" asp-for="DateOfSale" />

            <div class="form-group">
                <label asp-for="MerchId" class="control-label"></label>
                <select asp-for="MerchId" class="form-control" asp-items="ViewBag.MerchId"></select>
            </div>

            <div class="form-group">
                <label asp-for="GuestId" class="control-label"></label>
                <select asp-for="GuestId" class="form-control" asp-items="ViewBag.GuestId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SellerEmployeeId" class="control-label"></label>
                <select asp-for="SellerEmployeeId" class="form-control" asp-items="ViewBag.SellerEmployeeId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>
        </div>
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="SaleAmount" class="control-label"></label>
                <input asp-for="SaleAmount" class="form-control" />
                <span asp-validation-for="SaleAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
        </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

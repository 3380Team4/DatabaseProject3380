@using Microsoft.AspNetCore.Identity
@using ThemeParkApplication.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li><a asp-area="" asp-controller="Maintenances" asp-action="index">Mainteneances</a></li>
    <li><a asp-area="" asp-controller="Employees" asp-action="index">Employees</a></li>
    <li><a asp-area="" asp-controller="Closures" asp-action="index">Closures</a></li>
    <li><a asp-area="" asp-controller="Transactions" asp-action="index">Transactions</a></li>
    <li style="float:right; padding-left:20px;">
        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">


            <a asp-area="" asp-controller="Home" asp-action="Index">Hello @UserManager.GetUserName(User)!</a>


            <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>

        </form>
    </li>

        }
        else
        {
        <li style="float:right; padding-left:20px;"><a asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
        <li style="float:right; padding-left:20px;"><a asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
}
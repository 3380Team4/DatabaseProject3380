@model ThemeParkApplication.Models.Concessions

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Concessions</h4>
<hr />
<form asp-action="Edit">
    <div class="row">
        <div class="col-md-4">
            <input type="hidden" asp-for="ConcessionId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ConcessionName" class="control-label"></label>
                <input asp-for="ConcessionName" class="form-control" />
                <span asp-validation-for="ConcessionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ManagerId" class="control-label"></label>
                <select asp-for="ManagerId" class="form-control" asp-items="ViewBag.ManagerId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            <div>
                <a asp-action="Index">Back to List</a>
            </div>

        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="OpeningTime" class="control-label"></label>
                <input asp-for="OpeningTime" class="form-control" />
                <span asp-validation-for="OpeningTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClosingTime" class="control-label"></label>
                <input asp-for="ClosingTime" class="form-control" />
                <span asp-validation-for="ClosingTime" class="text-danger"></span>
            </div>


        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="StoreType" class="control-label"></label>
                <select asp-for="StoreType" class="form-control" asp-items="ViewBag.StoreType"></select>
            </div>
            <div class="form-group">
                <label asp-for="ConcessionStatus" class="control-label"></label>
                <select asp-for="ConcessionStatus" class="form-control" asp-items="ViewBag.ConcessionStatus"></select>
            </div>

        </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
